<% layout("/layouts/boilerplate") %>

<style>
  /* Homepage Hero Section */
  .homepage-main {
    margin-top: 1rem;
    background: linear-gradient(
      135deg,
      rgba(217, 54, 62, 0.1),
      rgba(33, 37, 41, 0.05)
    );
    border-radius: 1rem;
    padding: 3rem 2rem;
    margin-bottom: 1rem;
    text-align: center;
  }
  @media (max-width: 767.98px) {
    .homepage-main {
      padding: 2rem 1.5rem;
      margin-bottom: 1rem;
    }
  }
  .homepage-main h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #212529;
    margin-bottom: 1rem;
  }
  @media (max-width: 767.98px) {
    .homepage-main h1 {
      font-size: 1.75rem;
    }
  }
  .homepage-main p {
    font-size: 1.1rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
  }
  @media (max-width: 767.98px) {
    .homepage-main p {
      font-size: 1rem;
    }
  }

  /* Filter Container Mobile */
  @media (max-width: 767.98px) {
    .filter-container {
      top: 3.5rem;
      padding: 0.5rem 0.25rem;
      margin-top: 0.5rem;
    }
    .filter-option {
      margin: 0 0.75rem;
      padding-bottom: 0.25rem;
    }
    .filter-option i {
      font-size: 1.25rem;
    }
    .filter-option div {
      font-size: 0.75rem;
    }
  }

  /* Listing Cards Mobile */
  @media (max-width: 767.98px) {
    .listing-card {
      margin-bottom: 1.5rem;
    }
    .card-img-top {
      height: 16rem !important;
    }
    .card-body {
      padding: 1rem;
    }
    .card-text {
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
    }
    .card-price {
      font-size: 0.9rem;
    }
  }

  /* Search Results Alert Mobile */
  @media (max-width: 767.98px) {
    .alert {
      padding: 1rem;
      font-size: 0.9rem;
    }
    .alert .btn {
      width: 100%;
      margin-top: 0.75rem;
    }
  }

  /* Empty State Mobile */
  @media (max-width: 767.98px) {
    .alert.text-center {
      padding: 2rem 1rem;
    }
    .alert.text-center h5 {
      font-size: 1.1rem;
    }
    .alert.text-center p {
      font-size: 0.9rem;
    }
  }
</style>

<% if (!searchTerm && allListings.length > 0) { %>
<div class="homepage-main">
  <h1>Discover Your Next Adventure</h1>
  <p>
    Explore unique stays and experiences around the world. Find the perfect
    place for your next journey.
  </p>
</div>
<% } %>

<div class="filter-container sticky-top">
  <div class="scroll-arrow-container">
    <button class="btn scroll-arrow" id="scroll-left-btn" type="button">
      <i class="fa-solid fa-chevron-left"></i>
    </button>
  </div>

  <div class="filter-bar-wrapper">
    <%- include("../includes/filters.ejs") %>
  </div>

  <div class="scroll-arrow-container">
    <button class="btn scroll-arrow" id="scroll-right-btn" type="button">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  </div>

  <div class="tax-toggle-container">
    <label class="switch">
      <input type="checkbox" id="tax-switch" />
      <span class="slider round"></span>
    </label>
    <span class="tax-toggle-label">Display total after tax</span>
  </div>
</div>

<div
  class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3 g-3"
  id="listings-container"
>
  <% if (searchTerm) { %>
  <div class="col-12 mb-3">
    <div
      class="alert alert-light border d-flex justify-content-between align-items-center flex-wrap"
    >
      <div>
        Showing <strong><%= resultCount %></strong> listing<%= resultCount === 1
        ? "" : "s" %> for "<span class="fw-semibold"><%= searchTerm %></span>"
      </div>
      <a href="/listings" class="btn btn-sm btn-outline-secondary mt-2 mt-md-0"
        >Clear search</a
      >
    </div>
  </div>
  <% } %> <% if (allListings.length === 0) { %>
  <div class="col-12">
    <div class="alert alert-light border text-center py-5">
      <h5 class="mb-2">No listings match your search.</h5>
      <p class="text-secondary mb-3">
        Try different keywords or reset the filters to explore more stays.
      </p>
      <a href="/listings" class="btn btn-outline-danger">Reset Search</a>
    </div>
  </div>
  <% } %> <% for(let listing of allListings) { %>
  <div class="col">
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card h-100">
        <img <% const imgUrl = (listing.image && listing.image.url) ?
        listing.image.url : 'https://images.unsplash.com/photo-1566073771259-6a8506099945?w=1000&q=80';
        %> src="<%= imgUrl %>" class="card-img-top" alt="Listing Images"
        style="height: 20rem" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text mb-1">
            <b><%= listing.title %></b>
          </p>
          <div class="card-price">
            <span class="price-before-tax">
              <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b>
             / night
            </span>
            <span class="price-after-tax" style="display: none">
              <b>
                &#8377; <%= (listing.price * 1.18).toLocaleString("en-IN",
                {maximumFractionDigits: 0}) %>
              </b>
              / night
              <span class="tax-info">+18% GST</span>
            </span>
          </div>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
